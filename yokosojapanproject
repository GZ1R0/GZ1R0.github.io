                { id: 5, name: 'Kamakura', icon: 'fas fa-map-marker-alt', lat: 35.3192, lng: 139.5467 },
                { id: 6, name: 'Osaka', icon: 'fas fa-map-marker-alt', lat: 34.6937, lng: 135.5023 },
                { id: 7, name: 'Kyoto', icon: 'fas fa-map-marker-alt', lat: 35.0116, lng: 135.7681 },
                { id: 8, name: 'Hiroshima', icon: 'fas fa-map-marker-alt', lat: 34.3853, lng: 132.4553 },
                { id: 9, name: 'Nara', icon: 'fas fa-map-marker-alt', lat: 34.6851, lng: 135.8048 },
                { id: 10, name: 'Sapporo', icon: 'fas fa-map-marker-alt', lat: 43.0618, lng: 141.3545 }
            ]
        };

        // DOM Elements
        const screens = {
            home: document.getElementById('home-screen'),
            search: document.getElementById('search-screen'),
            trip: document.getElementById('trip-screen'),
            map: document.getElementById('map-screen')
        };

        const navItems = document.querySelectorAll('.nav-item');
        const screenTitle = document.getElementById('screen-title');
        const screenSubtitle = document.getElementById('screen-subtitle');
        const backBtn = document.getElementById('back-btn');
        const toast = document.getElementById('toast');
        const reservationModal = document.getElementById('reservation-modal');
        const reservationForm = document.getElementById('reservation-form');
        const reservationFormContent = document.getElementById('reservation-form-content');
        const reservationModalTitle = document.getElementById('reservation-modal-title');
        const existingReservations = document.getElementById('existing-reservations');

        // Initialize the app
        function initApp() {
            // Set up navigation
            setupNavigation();
            
            // Initialize screens
            initHomeScreen();
            initSearchScreen();
            initTripScreen();
            initMapScreen();
            
            // Show the home screen by default
            switchScreen('home');
            
            // Initialize date picker
            initDatePicker();
            
            // Try to get user location
            getUserLocation();
            
            // Load saved reservations
            renderExistingReservations();
        }

        // Show toast message
        function showToast(message, duration = 2000) {
            toast.textContent = message;
            toast.style.display = 'block';
            setTimeout(() => {
                toast.style.display = 'none';
            }, duration);
        }

        // Navigation setup
        function setupNavigation() {
            navItems.forEach(item => {
                item.addEventListener('click', function(e) {
                    e.preventDefault();
                    const screen = this.getAttribute('data-screen');
                    switchScreen(screen);
                });
            });

            backBtn.addEventListener('click', function() {
                // Go back to home screen from any screen
                switchScreen('home');
            });
        }

        // Switch between screens
        function switchScreen(screenName) {
            // Update current screen
            appState.currentScreen = screenName;
            
            // Hide all screens
            Object.values(screens).forEach(screen => {
                screen.classList.remove('active');
            });
            
            // Show the selected screen
            screens[screenName].classList.add('active');
            
            // Update navigation items
            navItems.forEach(item => {
                item.classList.remove('active');
                if (item.getAttribute('data-screen') === screenName) {
                    item.classList.add('active');
                }
            });
            
            // Show/hide back button
            if (screenName === 'home') {
                backBtn.style.display = 'none';
            } else {
                backBtn.style.display = 'block';
            }
            
            // Update header based on screen
            updateHeader(screenName);
            
            // Screen-specific initialization
            if (screenName === 'home') {
                renderTrendingPlaces();
                initHomeMap();
            } else if (screenName === 'search') {
                renderLocationList();
                document.getElementById('search-input').focus();
            } else if (screenName === 'trip') {
                renderTripPlaces();
                updateReservationCategories();
            } else if (screenName === 'map') {
                initFullMap();
            }
        }

        // Update header based on current screen
        function updateHeader(screenName) {
            const titles = {
                home: { main: 'Japan', subtitle: 'Explore landmarks' },
                search: { main: 'Search', subtitle: 'Find locations in Japan' },
                trip: { main: 'Trip to Japan', subtitle: 'Plan your itinerary' },
                map: { main: 'Interactive Map', subtitle: 'Explore Japan' }
            };
            
            screenTitle.textContent = titles[screenName].main;
            screenSubtitle.textContent = titles[screenName].subtitle;
        }

        // Get user location
        function getUserLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(
                    (position) => {
                        appState.userLocation = {
                            lat: position.coords.latitude,
                            lng: position.coords.longitude
                        };
                        console.log('User location:', appState.userLocation);
                    },
                    (error) => {
                        console.log('Error getting location:', error);
                    }
                );
            }
        }

        // Screen 1: Home Screen
        function initHomeScreen() {
            renderTrendingPlaces();
            
            // Add click handlers to category cards
            document.querySelectorAll('.category-card').forEach(card => {
                card.addEventListener('click', function() {
                    const category = this.getAttribute('data-category');
                    filterPlacesByCategory(category);
                });
            });
        }

        function initHomeMap() {
            if (appState.homeMap) {
                appState.homeMap.remove();
            }
            
            // Initialize Leaflet map for home screen
            appState.homeMap = L.map('interactive-japan-map').setView([36.2048, 138.2529], 5);
            
            // Add tile layer
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '© OpenStreetMap contributors',
                maxZoom: 8,
                minZoom: 4
            }).addTo(appState.homeMap);
            
            // Disable dragging and zoom on home screen map
            appState.homeMap.dragging.disable();
            appState.homeMap.touchZoom.disable();
            appState.homeMap.doubleClickZoom.disable();
            appState.homeMap.scrollWheelZoom.disable();
            appState.homeMap.boxZoom.disable();
            appState.homeMap.keyboard.disable();
            
            // Add markers for trending places
            appState.trendingPlaces.forEach(place => {
                const isInTrip = appState.tripPlaces.some(p => p.id === place.id);
                const markerColor = isInTrip ? '#28a745' : '#BC002D';
                
                const marker = L.marker([place.lat, place.lng], {
                    icon: L.divIcon({
                        className: 'custom-marker',
                        html: `<div class="map-marker" style="background-color: ${markerColor};">
                                 <div class="marker-label">${place.name}</div>
                               </div>`,
                        iconSize: [24, 24],
                        iconAnchor: [12, 24]
                    })
                }).addTo(appState.homeMap);
                
                marker.on('click', () => {
                    showPlaceDetailModal(place);
                });
            });
setTimeout(() => {
    appState.homeMap.invalidateSize();
}, 0);

        }

        function renderTrendingPlaces() {
            const container = document.getElementById('trending-places');
            container.innerHTML = '';
            
            appState.trendingPlaces.forEach(place => {
                const isInTrip = appState.tripPlaces.some(p => p.id === place.id);
                const card = document.createElement('div');
                card.className = 'landmark-card';
                card.setAttribute('data-id', place.id);
                card.innerHTML = `
                    <div class="place-icon">
                        <i class="${place.icon}"></i>
                    </div>
                    <div class="place-info">
                        <div class="place-name">${place.name}</div>
                        <div class="place-address">${place.address}</div>
                        <div class="place-distance">${place.distance}</div>
                    </div>
                    <button class="add-to-trip-btn ${isInTrip ? 'added' : ''}" data-id="${place.id}">
                        <i class="fas ${isInTrip ? 'fa-check' : 'fa-plus'}"></i>
                    </button>
                `;
                container.appendChild(card);
            });
            
            // Add event listeners to add-to-trip buttons
            document.querySelectorAll('.add-to-trip-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    const placeId = parseInt(this.getAttribute('data-id'));
                    const place = appState.trendingPlaces.find(p => p.id === placeId);
                    if (place) {
                        togglePlaceInTrip(place);
                        renderTrendingPlaces(); // Refresh to update button state
                    }
                });
            });
            
            // Add click handlers to landmark cards
            document.querySelectorAll('.landmark-card').forEach(card => {
                card.addEventListener('click', function() {
                    const placeId = parseInt(this.getAttribute('data-id'));
                    const place = appState.trendingPlaces.find(p => p.id === placeId);
                    if (place) {
                        showPlaceDetailModal(place);
                    }
                });
            });
        }

        function filterPlacesByCategory(category) {
            const filteredPlaces = appState.trendingPlaces.filter(place => 
                place.category === category
            );
            
            if (filteredPlaces.length > 0) {
                const container = document.getElementById('trending-places');
                container.innerHTML = '<h2 class="section-title">' + category.charAt(0).toUpperCase() + category.slice(1) + ' Places</h2>';
                
                filteredPlaces.forEach(place => {
                    const isInTrip = appState.tripPlaces.some(p => p.id === place.id);
                    const card = document.createElement('div');
                    card.className = 'landmark-card';
                    card.setAttribute('data-id', place.id);
                    card.innerHTML = `
                        <div class="place-icon">
                            <i class="${place.icon}"></i>
                        </div>
                        <div class="place-info">
                            <div class="place-name">${place.name}</div>
                            <div class="place-address">${place.address}</div>
                            <div class="place-distance">${place.distance}</div>
                        </div>
                        <button class="add-to-trip-btn ${isInTrip ? 'added' : ''}" data-id="${place.id}">
                            <i class="fas ${isInTrip ? 'fa-check' : 'fa-plus'}"></i>
                        </button>
                    `;
                    container.appendChild(card);
                });
                
                showToast(`Showing ${category} places`);
            }
        }

        // Screen 2: Search Screen
        function initSearchScreen() {
            const searchInput = document.getElementById('search-input');
            
            searchInput.addEventListener('input', function() {
                filterLocations(this.value);
            });
            
            setupKeyboard();
        }

        function renderLocationList(filter = '') {
            const container = document.getElementById('location-list');
            container.innerHTML = '';
            
            const filteredLocations = appState.searchLocations.filter(location =>
                location.name.toLowerCase().includes(filter.toLowerCase())
            );
            
            filteredLocations.forEach(location => {
                const item = document.createElement('div');
                item.className = 'location-item';
                item.setAttribute('data-name', location.name);
                item.innerHTML = `
                    <i class="${location.icon} location-icon"></i>
                    ${location.name}
                `;
                container.appendChild(item);
                
                item.addEventListener('click', () => {
                    if (location.name === 'Use current location') {
                        if (appState.userLocation) {
                            showToast('Using your current location');
                            // Center map on user location
                            switchScreen('map');
                            setTimeout(() => {
                                appState.fullMap.setView([appState.userLocation.lat, appState.userLocation.lng], 12);
                            }, 100);
                        } else {
                            showToast('Unable to get your location');
                        }
                    } else {
                        showToast(`Searching for ${location.name}...`);
                        switchScreen('map');
                        setTimeout(() => {
                            if (location.lat && location.lng) {
                                appState.fullMap.setView([location.lat, location.lng], 10);
                            }
                        }, 100);
                    }
                });
            });
        }

        function filterLocations(searchTerm) {
            renderLocationList(searchTerm);
        }

        function setupKeyboard() {
            const searchInput = document.getElementById('search-input');
            
            document.querySelectorAll('.key').forEach(key => {
                key.addEventListener('click', function() {
                    const keyValue = this.getAttribute('data-key');
                    
                    if (keyValue === 'search') {
                        if (searchInput.value.trim()) {
                            showToast(`Searching for "${searchInput.value}"...`);
                        }
                    } else if (keyValue === ' ') {
                        searchInput.value += ' ';
                    } else if (keyValue === 'left') {
                        const cursorPos = searchInput.selectionStart;
                        searchInput.setSelectionRange(cursorPos - 1, cursorPos - 1);
                    } else if (keyValue === 'right') {
                        const cursorPos = searchInput.selectionStart;
                        searchInput.setSelectionRange(cursorPos + 1, cursorPos + 1);
                    } else if (keyValue === '123') {
                        showToast('Number keyboard would appear here');
                    } else {
                        searchInput.value += keyValue;
                    }
                    
                    // Trigger input event to filter locations
                    searchInput.dispatchEvent(new Event('input'));
                    searchInput.focus();
                });
            });
        }

        // Screen 3: Trip Planning Screen
        function initTripScreen() {
            // Add place button
            document.getElementById('add-place-btn').addEventListener('click', function() {
                switchScreen('search');
                showToast('Search for places to add to your trip');
            });
            
            // Share trip button
            document.getElementById('share-trip-btn').addEventListener('click', function() {
                const tripData = {
                    places: appState.tripPlaces,
                    notes: document.getElementById('trip-notes').value,
                    dates: document.getElementById('trip-dates').value,
                    reservations: appState.reservations
                };
                
                // In a real app, this would share the trip data
                // For demo, we'll just show a toast
                showToast('Trip shared successfully! A link has been copied to your clipboard.');
                
                // Copy trip summary to clipboard
                const tripSummary = `My Japan Trip:\n\nPlaces to visit:\n${appState.tripPlaces.map(p => `- ${p.name}`).join('\n')}\n\nReservations:\n${appState.reservations.map(r => `- ${r.name} (${r.type})`).join('\n')}\n\nNotes: ${tripData.notes}\nDates: ${tripData.dates}`;
                navigator.clipboard.writeText(tripSummary).catch(err => {
                    console.log('Failed to copy: ', err);
                });
            });
            
            // Reservation categories
            document.querySelectorAll('.reservation-category').forEach(category => {
                category.addEventListener('click', function() {
                    const categoryType = this.getAttribute('data-category');
                    openReservationModal(categoryType);
                });
            });
            
            // Cancel reservation button
            document.getElementById('cancel-reservation-btn').addEventListener('click', function() {
                reservationModal.style.display = 'none';
            });
            
            // Save reservation button
            reservationForm.addEventListener('submit', function(e) {
                e.preventDefault();
                saveReservation();
            });
            
            // Load trip notes from localStorage
            const savedNotes = localStorage.getItem('tripNotes');
            if (savedNotes) {
                document.getElementById('trip-notes').value = savedNotes;
            }
            
            // Save trip notes when changed
            document.getElementById('trip-notes').addEventListener('input', function() {
                localStorage.setItem('tripNotes', this.value);
            });
        }

        function initDatePicker() {
            flatpickr("#trip-dates", {
                mode: "range",
                dateFormat: "M j, Y",
                minDate: "today",
                onChange: function(selectedDates, dateStr, instance) {
                    if (dateStr) {
                        document.getElementById('trip-dates').style.color = 'var(--primary-black)';
                        localStorage.setItem('tripDates', dateStr);
                        showToast('Trip dates updated');
                    }
                }
            });
            
            // Load saved dates
            const savedDates = localStorage.getItem('tripDates');
            if (savedDates) {
                document.getElementById('trip-dates').value = savedDates;
                document.getElementById('trip-dates').style.color = 'var(--primary-black)';
            }
        }

        function renderTripPlaces() {
            const container = document.getElementById('places-list-container');
            container.innerHTML = '';
            
            if (appState.tripPlaces.length === 0) {
                const emptyMessage = document.createElement('div');
                emptyMessage.className = 'no-reservations';
                emptyMessage.textContent = 'No places added yet. Click "Add a place" to start planning.';
                container.appendChild(emptyMessage);
                return;
            }
            
            appState.tripPlaces.forEach((place, index) => {
                const placeElement = document.createElement('div');
                placeElement.className = 'saved-place-card';
                placeElement.innerHTML = `
                    <div>
                        <div class="saved-place-name">${place.name}</div>
                        <div style="font-size: 12px; color: var(--text-light);">${place.address}</div>
                    </div>
                    <button class="remove-place-btn" data-index="${index}">
                        <i class="fas fa-times"></i>
                    </button>
                `;
                container.appendChild(placeElement);
            });
            
            // Add event listeners to remove buttons
            document.querySelectorAll('.remove-place-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    const index = parseInt(this.getAttribute('data-index'));
                    removePlaceFromTrip(index);
                });
            });
        }

        function togglePlaceInTrip(place) {
            const index = appState.tripPlaces.findIndex(p => p.id === place.id);
            
            if (index === -1) {
                // Add to trip
                appState.tripPlaces.push(place);
                showToast(`Added ${place.name} to your trip!`);
            } else {
                // Remove from trip
                appState.tripPlaces.splice(index, 1);
                showToast(`Removed ${place.name} from your trip`);
            }
            
            // Save to localStorage
            localStorage.setItem('tripPlaces', JSON.stringify(appState.tripPlaces));
            
            // Refresh trip screen if it's active
            if (appState.currentScreen === 'trip') {
                renderTripPlaces();
            }
            
            // Refresh home map to update markers
            if (appState.homeMap) {
                initHomeMap();
            }
            
            // Update reservation categories
            updateReservationCategories();
        }

        function removePlaceFromTrip(index) {
            const place = appState.tripPlaces[index];
            appState.tripPlaces.splice(index, 1);
            
            // Save to localStorage
            localStorage.setItem('tripPlaces', JSON.stringify(appState.tripPlaces));
            
            // Refresh displays
            renderTripPlaces();
            renderTrendingPlaces();
            showToast(`Removed ${place.name} from your trip`);
            
            // Refresh home map
            if (appState.homeMap) {
                initHomeMap();
            }
            
            // Update reservation categories
            updateReservationCategories();
        }

        // Reservation Management
        function openReservationModal(type) {
            appState.currentReservationType = type;
            
            // Update modal title
            const typeNames = {
                flights: 'Flight Reservation',
                lodging: 'Lodging Reservation',
                car: 'Rental Car Reservation',
                restaurant: 'Restaurant Reservation',
                attachment: 'Add Attachment',
                other: 'Other Reservation'
            };
            
            reservationModalTitle.textContent = typeNames[type] || 'Add Reservation';
            
            // Clear previous form content
            reservationFormContent.innerHTML = '';
            
            // Create form based on reservation type
            let formHTML = '';
            
            switch(type) {
                case 'flights':
                    formHTML = `
                        <div class="form-group">
                            <label class="form-label">Airline</label>
                            <input type="text" class="form-input" id="airline" placeholder="e.g., Japan Airlines" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Flight Number</label>
                            <input type="text" class="form-input" id="flight-number" placeholder="e.g., JL123" required>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">From</label>
                                <input type="text" class="form-input" id="from" placeholder="Departure city" required>
                            </div>
                            <div class="form-group">
                                <label class="form-label">To</label>
                                <input type="text" class="form-input" id="to" placeholder="Arrival city" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">Departure Date</label>
                                <input type="date" class="form-input" id="departure-date" required>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Departure Time</label>
                                <input type="time" class="form-input" id="departure-time" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Confirmation Number</label>
                            <input type="text" class="form-input" id="confirmation" placeholder="Booking reference">
                        </div>
                    `;
                    break;
                    
                case 'lodging':
                    formHTML = `
                        <div class="form-group">
                            <label class="form-label">Hotel Name</label>
                            <input type="text" class="form-input" id="hotel-name" placeholder="e.g., Park Hotel Tokyo" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Address</label>
                            <input type="text" class="form-input" id="hotel-address" placeholder="Hotel address" required>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">Check-in Date</label>
                                <input type="date" class="form-input" id="checkin-date" required>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Check-out Date</label>
                                <input type="date" class="form-input" id="checkout-date" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Room Type</label>
                            <input type="text" class="form-input" id="room-type" placeholder="e.g., Deluxe Twin">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Confirmation Number</label>
                            <input type="text" class="form-input" id="lodging-confirmation" placeholder="Booking reference">
                        </div>
                    `;
                    break;
                    
                case 'car':
                    formHTML = `
                        <div class="form-group">
                            <label class="form-label">Rental Company</label>
                            <input type="text" class="form-input" id="company" placeholder="e.g., Toyota Rent-a-Car" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Car Type</label>
                            <input type="text" class="form-input" id="car-type" placeholder="e.g., Toyota Prius" required>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">Pick-up Date</label>
                                <input type="date" class="form-input" id="pickup-date" required>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Drop-off Date</label>
                                <input type="date" class="form-input" id="dropoff-date" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Pick-up Location</label>
                            <input type="text" class="form-input" id="pickup-location" placeholder="e.g., Narita Airport" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Confirmation Number</label>
                            <input type="text" class="form-input" id="car-confirmation" placeholder="Booking reference">
                        </div>
                    `;
                    break;
                    
                case 'restaurant':
                    formHTML = `
                        <div class="form-group">
                            <label class="form-label">Restaurant Name</label>
                            <input type="text" class="form-input" id="restaurant-name" placeholder="e.g., Sukiyabashi Jiro" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Address</label>
                            <input type="text" class="form-input" id="restaurant-address" placeholder="Restaurant address" required>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">Reservation Date</label>
                                <input type="date" class="form-input" id="reservation-date" required>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Reservation Time</label>
                                <input type="time" class="form-input" id="reservation-time" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Number of Guests</label>
                            <input type="number" class="form-input" id="guests" placeholder="e.g., 2" min="1" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Confirmation Number</label>
                            <input type="text" class="form-input" id="restaurant-confirmation" placeholder="Booking reference">
                        </div>
                    `;
                    break;
                    
                case 'attachment':
                    formHTML = `
                        <div class="form-group">
                            <label class="form-label">Attachment Name</label>
                            <input type="text" class="form-input" id="attachment-name" placeholder="e.g., Travel Insurance" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Description</label>
                            <textarea class="form-input" id="attachment-description" placeholder="Description of the attachment" rows="3"></textarea>
                        </div>
                        <div class="form-group">
                            <label class="form-label">File Upload (simulated)</label>
                            <input type="text" class="form-input" id="attachment-file" placeholder="Click to upload file" readonly>
                            <button type="button" class="form-btn btn-secondary" style="margin-top: 8px; padding: 8px;" onclick="simulateFileUpload()">Choose File</button>
                        </div>
                    `;
                    break;
                    
                case 'other':
                default:
                    formHTML = `
                        <div class="form-group">
                            <label class="form-label">Reservation Name</label>
                            <input type="text" class="form-input" id="other-name" placeholder="e.g., Museum Tickets" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Description</label>
                            <textarea class="form-input" id="other-description" placeholder="Details about the reservation" rows="3" required></textarea>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label class="form-label">Date</label>
                                <input type="date" class="form-input" id="other-date">
                            </div>
                            <div class="form-group">
                                <label class="form-label">Time</label>
                                <input type="time" class="form-input" id="other-time">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Confirmation Number</label>
                            <input type="text" class="form-input" id="other-confirmation" placeholder="Booking reference">
                        </div>
                    `;
            }
            
            reservationFormContent.innerHTML = formHTML;
            reservationModal.style.display = 'flex';
            
            // Show existing reservations for this type
            renderExistingReservations(type);
        }

        function simulateFileUpload() {
            const fileInput = document.getElementById('attachment-file');
            const fileName = `travel_document_${Math.floor(Math.random() * 1000)}.pdf`;
            fileInput.value = fileName;
            showToast('File selected: ' + fileName);
        }

        function saveReservation() {
            const type = appState.currentReservationType;
            let reservationData = {
                id: Date.now(),
                type: type,
                dateAdded: new Date().toLocaleDateString()
            };
            
            // Collect data based on reservation type
            switch(type) {
                case 'flights':
                    reservationData.name = document.getElementById('airline').value;
                    reservationData.details = `Flight ${document.getElementById('flight-number').value} from ${document.getElementById('from').value} to ${document.getElementById('to').value}`;
                    reservationData.date = document.getElementById('departure-date').value;
                    reservationData.time = document.getElementById('departure-time').value;
                    reservationData.confirmation = document.getElementById('confirmation').value;
                    break;
                    
                case 'lodging':
                    reservationData.name = document.getElementById('hotel-name').value;
                    reservationData.details = `Check-in: ${document.getElementById('checkin-date').value}, Check-out: ${document.getElementById('checkout-date').value}`;
                    reservationData.address = document.getElementById('hotel-address').value;
                    reservationData.confirmation = document.getElementById('lodging-confirmation').value;
                    break;
                    
                case 'car':
                    reservationData.name = document.getElementById('company').value;
                    reservationData.details = `${document.getElementById('car-type').value} at ${document.getElementById('pickup-location').value}`;
                    reservationData.date = document.getElementById('pickup-date').value;
                    reservationData.endDate = document.getElementById('dropoff-date').value;
                    reservationData.confirmation = document.getElementById('car-confirmation').value;
                    break;
                    
                case 'restaurant':
                    reservationData.name = document.getElementById('restaurant-name').value;
                    reservationData.details = `${document.getElementById('guests').value} guests at ${document.getElementById('reservation-time').value}`;
                    reservationData.date = document.getElementById('reservation-date').value;
                    reservationData.address = document.getElementById('restaurant-address').value;
                    reservationData.confirmation = document.getElementById('restaurant-confirmation').value;
                    break;
                    
                case 'attachment':
                    reservationData.name = document.getElementById('attachment-name').value;
                    reservationData.details = document.getElementById('attachment-description').value;
                    reservationData.file = document.getElementById('attachment-file').value;
                    break;
                    
                case 'other':
                default:
                    reservationData.name = document.getElementById('other-name').value;
                    reservationData.details = document.getElementById('other-description').value;
                    reservationData.date = document.getElementById('other-date').value;
                    reservationData.time = document.getElementById('other-time').value;
                    reservationData.confirmation = document.getElementById('other-confirmation').value;
            }
            
            // Add to reservations array
            appState.reservations.push(reservationData);
            
            // Save to localStorage
            localStorage.setItem('reservations', JSON.stringify(appState.reservations));
            
            // Close modal
            reservationModal.style.display = 'none';
            
            // Show success message
            showToast(`${typeNames[type] || 'Reservation'} added successfully!`);
            
            // Update reservation categories
            updateReservationCategories();
            
            // Clear form
            reservationForm.reset();
        }

        function renderExistingReservations(filterType = null) {
            existingReservations.innerHTML = '';
            
            // Filter reservations if a type is specified
            const filteredReservations = filterType 
                ? appState.reservations.filter(r => r.type === filterType)
                : appState.reservations;
            
            if (filteredReservations.length === 0) {
                const emptyMessage = document.createElement('div');
                emptyMessage.className = 'no-reservations';
                emptyMessage.textContent = filterType 
                    ? `No ${filterType} reservations yet`
                    : 'No reservations yet';
                existingReservations.appendChild(emptyMessage);
                return;
            }
            
            // Add title if showing all reservations
            if (!filterType) {
                const title = document.createElement('h4');
                title.style.marginBottom = '15px';
                title.style.color = 'var(--primary-black)';
                title.textContent = 'All Reservations';
                existingReservations.appendChild(title);
            }
            
            // Display reservations
            filteredReservations.forEach(reservation => {
                const item = document.createElement('div');
                item.className = 'reservation-item';
                
                let detailsHTML = '';
                if (reservation.details) {
                    detailsHTML += `<div class="reservation-details">${reservation.details}</div>`;
                }
                if (reservation.address) {
                    detailsHTML += `<div class="reservation-details">${reservation.address}</div>`;
                }
                if (reservation.date) {
                    detailsHTML += `<div class="reservation-date">Date: ${reservation.date}${reservation.time ? ' at ' + reservation.time : ''}</div>`;
                }
                if (reservation.confirmation) {
                    detailsHTML += `<div class="reservation-date">Confirmation: ${reservation.confirmation}</div>`;
                }
                
                item.innerHTML = `
                    <div class="reservation-header">
                        <div class="reservation-name">${reservation.name}</div>
                        <div class="reservation-type">${reservation.type}</div>
                    </div>
                    ${detailsHTML}
                    <div class="reservation-date" style="margin-top: 8px;">Added: ${reservation.dateAdded}</div>
                `;
                
                existingReservations.appendChild(item);
            });
        }

        function updateReservationCategories() {
            // Count reservations by type
            const counts = {
                flights: 0,
                lodging: 0,
                car: 0,
                restaurant: 0,
                attachment: 0,
                other: 0
            };
            
            appState.reservations.forEach(reservation => {
                if (counts[reservation.type] !== undefined) {
                    counts[reservation.type]++;
                }
            });
            
            // Update UI
            document.querySelectorAll('.reservation-category').forEach(category => {
                const type = category.getAttribute('data-category');
                const count = counts[type] || 0;
                const categoryName = category.querySelector('.category-name');
                
                // Update text to show count if any
                if (count > 0) {
                    const baseName = categoryName.textContent.replace(/ \(\d+\)/, '');
                    categoryName.textContent = `${baseName} (${count})`;
                    category.setAttribute('data-active', 'true');
                    category.classList.add('active');
                } else {
                    const baseName = categoryName.textContent.replace(/ \(\d+\)/, '');
                    categoryName.textContent = baseName;
                    category.setAttribute('data-active', 'false');
                    category.classList.remove('active');
                }
            });
        }

        // Reservation type names for display
        const typeNames = {
            flights: 'Flight',
            lodging: 'Lodging',
            car: 'Rental Car',
            restaurant: 'Restaurant',
            attachment: 'Attachment',
            other: 'Other'
        };

        // Screen 4: Interactive Map
        function initFullMap() {
            if (appState.fullMap) {
                appState.fullMap.remove();
            }
            
            // Initialize Leaflet map for full screen
            appState.fullMap = L.map('full-map').setView([36.2048, 138.2529], 6);
            
            // Add tile layer
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '© OpenStreetMap contributors',
                maxZoom: 18
            }).addTo(appState.fullMap);
            
            // Add markers for trending places
            appState.trendingPlaces.forEach(place => {
                const isInTrip = appState.tripPlaces.some(p => p.id === place.id);
                const markerColor = isInTrip ? '#28a745' : '#BC002D';
                
                const marker = L.marker([place.lat, place.lng], {
                    icon: L.divIcon({
                        className: 'custom-marker',
                        html: `<div class="map-marker" style="background-color: ${markerColor};">
                                 <div class="marker-label">${place.name}</div>
                               </div>`,
                        iconSize: [24, 24],
                        iconAnchor: [12, 24]
                    })
                }).addTo(appState.fullMap);
                
                marker.bindPopup(`
                    <b>${place.name}</b><br>
                    ${place.address}<br>
                    <button onclick="window.showPlaceDetailModal(${JSON.stringify(place).replace(/"/g, '&quot;')})" 
                            style="background: #BC002D; color: white; border: none; padding: 5px 10px; border-radius: 4px; cursor: pointer; margin-top: 5px;">
                        View Details
                    </button>
                `);
                
                marker.on('click', () => {
                    marker.openPopup();
                });
            });
            
            // Add map controls
            document.getElementById('locate-btn').addEventListener('click', () => {
                if (appState.userLocation) {
                    appState.fullMap.setView([appState.userLocation.lat, appState.userLocation.lng], 12);
                    showToast('Centered on your location');
                } else {
                    showToast('Unable to get your location');
                }
            });
            
            document.getElementById('zoom-in-btn').addEventListener('click', () => {
                appState.fullMap.zoomIn();
            });
            
            document.getElementById('zoom-out-btn').addEventListener('click', () => {
                appState.fullMap.zoomOut();
            });
        }

        // Place Detail Modal
        function showPlaceDetailModal(place) {
            const modal = document.getElementById('place-detail-modal');
            const modalTitle = document.getElementById('modal-place-name');
            const modalDetail = document.getElementById('modal-place-detail');
            const modalAddBtn = document.getElementById('modal-add-btn');
            
            modalTitle.textContent = place.name;
            
            const isInTrip = appState.tripPlaces.some(p => p.id === place.id);
            
            modalDetail.innerHTML = `
                <p><strong>Address:</strong> ${place.address}</p>
                <p><strong>Region:</strong> ${place.region}</p>
                <p><strong>Category:</strong> ${place.category.charAt(0).toUpperCase() + place.category.slice(1)}</p>
                <p><strong>Description:</strong> ${place.description}</p>
            `;
            
            modalAddBtn.innerHTML = isInTrip ? 
                '<i class="fas fa-check"></i> Already in Trip' : 
                '<i class="fas fa-plus"></i> Add to Trip';
            modalAddBtn.disabled = isInTrip;
            modalAddBtn.style.opacity = isInTrip ? '0.7' : '1';
            
            modal.style.display = 'flex';
            
            // Add event listeners
            document.getElementById('close-modal').onclick = () => modal.style.display = 'none';
            document.getElementById('modal-cancel-btn').onclick = () => modal.style.display = 'none';
            
            modalAddBtn.onclick = () => {
                togglePlaceInTrip(place);
                modal.style.display = 'none';
            };
            
            // Close modal when clicking outside
            modal.onclick = (e) => {
                if (e.target === modal) {
                    modal.style.display = 'none';
                }
            };
        }

        // Make function available globally for popup buttons
        window.showPlaceDetailModal = showPlaceDetailModal;
        window.simulateFileUpload = simulateFileUpload;

        // Initialize the app when DOM is loaded
        document.addEventListener('DOMContentLoaded', initApp);
    </script>
</body>
</html>
