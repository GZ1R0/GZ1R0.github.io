    <script>
        // App state
        const appState = {
            currentScreen: 'home',
            tripPlaces: JSON.parse(localStorage.getItem('tripPlaces')) || [],
            userLocation: null,
            homeMap: null,
            fullMap: null,
            reservations: JSON.parse(localStorage.getItem('reservations')) || [],
            currentReservationType: null,
            trendingPlaces: [
                { 
